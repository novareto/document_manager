<h1> Ihre aktuelle(n) Akte(n) </h1>

<div class="accordion" id="akten-liste" xmlns:xlink="http://www.w3.org/1999/xlink">
  <div class="card" tal:repeat="file user.get_files(request=request, key=request.user.key)">
    <div class="card-header" id="headingOne" tal:attributes="id string:heading_${repeat.file.number}">
      <h2 class="mb-0">
        <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" aria-expanded="true" aria-controls="collapseOne" tal:attributes="data-target string:#collapse_${repeat.file.number}">
          <svg class="bi" width="32" height="32" fill="currentColor">
            <use xlink:href="static/docmanager/bootstrap-icons.svg#folder"/>
          </svg>
          Akte - <span tal:replace="string: ${file.az}"/>
        </button>
      </h2>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#akten-liste" tal:attributes="id string:collapse_${repeat.file.number}">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Dokument</th>
              <th scope="col">Datum</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>

            <tr tal:repeat="doc user.get_documents(request=request, username=request.user.key, az=file.az)">
              <td tal:content="repeat.doc.number"> </td>
              <td> <a href="" tal:attributes="href request.app.routes.url_for('event_edit', az=file.az, username=file.username, key=doc.key)" tal:content="doc.content_type"> </a> </td>
              <td tal:content="file.creation_date.strftime('%d.%m.%Y %H:%M')"></td>
              <td tal:content="doc.state"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
